{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test:ci": "mocha --exit --require @babel/register",
    "test": "nyc mocha --require @babel/register",
    "transpile": "babel ./src --out-dir dist",
    "clean": "rimraf dist",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist/index.js",
    "start": "npm-run-all build server",
    "dev": "nodemon src/index.js --exec babel-node --presets @babel/preset-env"
  },
  "keywords": [
    "images",
    "cats",
    "sharks"
  ],
  "author": "Matthew Podolak",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/node": "^7.14.9",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/transform-runtime"
      ]
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/test/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "mocha": "^9.0.3",
    "nyc": "^15.1.0"
  }
}
